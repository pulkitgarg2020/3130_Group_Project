<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.CSCI.a3130_group_6.Registration.RegistrationHome">
    <!--This button is meant to send employees to the designated employee registration page-->
    <Button

        android:id="@+id/employeeBtn"
        android:layout_width="130dp"
        android:layout_height="67dp"
        android:layout_marginStart="134dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="24dp"
        android:text="Are you an employee?"
        app:layout_constraintBottom_toTopOf="@+id/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employer" />


    <!--This button is meant to send employers to the designated employee registration page-->
    <Button
        android:id="@+id/employer"
        android:layout_width="130dp"
        android:layout_height="67dp"
        android:layout_marginStart="134dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="39dp"
        android:text="Are you an employer?"
        app:layout_constraintBottom_toTopOf="@+id/employeeBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <!--This is the image for our banner-->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="213dp"
        android:layout_height="124dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/employer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />


    <!--This button is for the back button-->
    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="153dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="165dp"
        android:layout_marginBottom="233dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employeeBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>